<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsc.cmps121.adiuvare">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/micimage"
        android:label="@string/app_name"
        android:roundIcon="@drawable/micimage"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SpeakingScreen"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity android:name=".ListeningScreenNoText"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity android:name=".ListeningScreen"
            android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>